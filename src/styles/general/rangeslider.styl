.rangeslider-horizontal {
  height: 2px;
  box-shadow: none;
  background-color: #f1f1f1;
  border-radius: 0;
  .rangeslider__handle {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 0;
    box-shadow: 0 0 20px $primary-color;
    background: $primary-color;
    outline: none;
    &:after {
      width: 6px;
      height: 6px;
      top: 7px;
      left: 7px;
      box-shadow: none;
      border-radius: 50%;
      background-color: #fff;
    }
  }
  .rangeslider__handle-tooltip {
    background: #fff;
    color: $text-color;
    border: 2px solid #e9e8eb;
    height: 30px;
    width: auto;
    top: -37px;
    span {
      margin-top: 6px;
      padding: 0 10px;
      white-space: nowrap;
    }
    &:after {
      content: none;
    }
  }

  .rangeslider__label-item {
    white-space: nowrap;
    color: #beb8d3;
    font-size: 11px;
    top: 6px;
  }

  .rangeslider__fill {
    background-color: $primary-color;
  }
}